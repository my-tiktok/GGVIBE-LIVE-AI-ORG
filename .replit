modules = ["nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GGVIBE Web"

[[workflows.workflow]]
name = "GGVIBE Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ggvibe && npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["sh", "-c", "cd ggvibe && npm install && npm run build"]
run = ["sh", "-c", "cd ggvibe && npm run start"]
deploymentTarget = "autoscale"
