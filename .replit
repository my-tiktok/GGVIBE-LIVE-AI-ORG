modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GGVIBE Web"

[[workflows.workflow]]
name = "GGVIBE Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ggvibe && npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["bash", "-c", "bash scripts/guard-root.sh && cd ggvibe && NODE_OPTIONS='--max-old-space-size=1536' npm ci && NODE_OPTIONS='--max-old-space-size=1536' npm run build"]
run = ["bash", "-c", "cd ggvibe && npm run start"]
deploymentTarget = "autoscale"

[nix]
channel = "stable-25_05"
