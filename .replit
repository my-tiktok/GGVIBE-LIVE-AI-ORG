modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GGVIBE Web"

[[workflows.workflow]]
name = "GGVIBE Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Waiting for build verification...\" && sleep 999999"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["bash", "-c", "cd ggvibe && npm ci && npm run build"]
run = ["bash", "-c", "cd ggvibe && npm run start"]
deploymentTarget = "autoscale"

[nix]
channel = "stable-25_05"
