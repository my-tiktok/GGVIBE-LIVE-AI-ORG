# Canonical app URL (must be https://www.ggvibe-chatgpt-ai.org in production)
NEXT_PUBLIC_APP_URL=https://www.ggvibe-chatgpt-ai.org
NEXTAUTH_URL=https://www.ggvibe-chatgpt-ai.org

# Session/Auth secrets
SESSION_SECRET=replace-with-32-plus-char-random-string
NEXTAUTH_SECRET=replace-with-32-plus-char-random-string

# OAuth providers (NextAuth)
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret
GITHUB_CLIENT_ID=github-client-id
GITHUB_CLIENT_SECRET=github-client-secret

# Email magic-link provider (NextAuth EmailProvider)
EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=GGVIBE <no-reply@ggvibe-chatgpt-ai.org>

# Firebase client (phone OTP)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Firebase Admin (for server-side session verification)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# OR split vars:
# FIREBASE_ADMIN_PROJECT_ID=...
# FIREBASE_ADMIN_CLIENT_EMAIL=...
# FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Upstash rate limiting
UPSTASH_REDIS_KV_REST_API_URL=https://<id>.upstash.io
UPSTASH_REDIS_KV_REST_API_TOKEN=upstash-token
KV_REST_API_URL=
KV_REST_API_TOKEN=
